<div class="container col-lg-6 col-xl-6 col-sm-12 col-md-8 col-12">
  <h2>Hang on - we need you to log in...</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs user-form-control">
      <%= f.input :login, label: "Username or Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "login" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div class="dark-font" style="color: black"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
    </div>

    <div class="form-actions btn submit-btn">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
  <hr>
  <%= render "devise/shared/links" %>
</div>
