<h1>All Languages</h1>

<hr>

<h3>Your 3 most recent languages</h3>
<ul>
  <% @top3.each do |language| %>
    <%= language %>
  <% end %>
</ul>

<hr>

<ul>
  <% @languages.each do |language| %>
    <li>
      <%= cl_image_tag language.photo.key, height: 300, width: 400, crop: :fill%>
      <h4><%= language.name %></h3>
      <small><%= language.description %></small>
    </li>
  <% end %>
</ul>
