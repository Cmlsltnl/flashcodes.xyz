<div class="set-card-info col-sm-12 set-tooltiptext-left">
  <div class="set-info-bg">
    <div class="text-left head">
      <div class="text-white">
        <h1><%= set.title %></h1>
      </div>
      <h4 class="text-white">
        <%= set.description %>
      </h4>
      <%= link_to card_set_path(set) do %>
        <div class="btn secondary-btn">
          Start
        </div>
      <% end %>
    </div>
    <div class="set-card-info-exp btn btn-warning">
      <%= set.flashcards.count * value %> XP
    </div>
  </div>
</div>
