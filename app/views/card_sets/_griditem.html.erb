<div class="grid__item <%= add %> mx-1" tabindex="<%= count %>">
  <div class="card-description">
    <h6><%= cardset[cardset_count][:title] %></h6>
    <p><%= cardset[cardset_count].flashcards.count %> cards</p>
  </div>
</div>
<div class="grid__description slide">
  <div class="px-5 py-3 d-flex justify-content-between align-items-top">
    <div class="">
      <h5 class="mt-3"><%= cardset[cardset_count][:description] %></h5>
      <!-- <hr style="border-top: 1px solid #aaa"> -->
      <div class="">
        <% social = @group.users.where(@user_sets.find_by(card_set: cardset[cardset_count]) == cardset[cardset_count]) - [current_user] unless @group.nil? %>
        <p><% social.nil? ? "You're the first to attempt this!" : "" %></p>
        <% social.sample(3).each do |user| %>
          <div class="tooltippy">
            <%= cl_image_tag user.photo.key, class: "avatar" %>
            <span class="tooltippytext"><%= user.username.capitalize %></span>
          </div>
        <% end unless social.nil? %>
         <% if social.nil? %>
         <% else %>
          and <strong><%= User.where(@user_sets.find_by(card_set: cardset[cardset_count]) == cardset[cardset_count]).count - social.count %></strong> others have attempted this set!
        <% end %>
      </div>
      <div class="mt-5">
        <%= link_to card_set_path(cardset[cardset_count]) do %>
          <div class="btn secondary-btn">
            Start
          </div>
        <% end %>
      </div>
    </div>
    <div class="grid-xp">
      <%= cardset[cardset_count].flashcards.count * @difficulty_value %>XP
    </div>
  </div>
</div>
